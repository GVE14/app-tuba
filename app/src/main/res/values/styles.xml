<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">68dp</item>

        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>

        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">#4169E1</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">#4169E1</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">#4169E1</item>
        <item name="rippleColor">#334169E1</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">68dp</item>

        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>

        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="boxStrokeColor">#4169E1</item>
        <item name="hintTextColor">#4169E1</item>

    </style>

</resources>